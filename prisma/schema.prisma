generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model AnalyticsEvent {
  id        String   @id @default(uuid())
  type      String   // "visit", "click_playstore", "click_appstore", "click_whatsapp"
  date      DateTime @default(now())
  userAgent String?
  referer   String?
  
  // Geolocation
  city      String?
  region    String?
  country   String?

  // Marketing (Paid Traffic)
  utm_source   String?
  utm_medium   String?
  utm_campaign String?

  createdAt DateTime @default(now())

  @@index([type])
  @@index([date])
  @@index([utm_source])
}

model IntegrationConfig {
  id        String   @id @default(uuid())
  key       String   @unique // e.g., "facebook", "google", "tiktok"
  data      Json     // Stores tokens, pixels, etc.
  updatedAt DateTime @updatedAt
}

model SiteContent {
  id        String   @id @default(uuid())
  section   String   // "gallery", "promo"
  type      String   // "youtube", "image", "text"
  title     String?
  url       String?  // Video URL or Image URL
  content   String?  // Description or promo text
  isActive  Boolean  @default(true)
  order     Int      @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
